<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_theme_purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_margin_left_book_details"
            android:layout_marginEnd="@dimen/dimens_txt_btn_theme"
            android:layout_weight="1"
            android:text="@string/string_theme_purple"
            android:textSize="@dimen/dimens_txt_btn_theme" />

        <Button
            android:id="@+id/btn_theme_gold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_txt_btn_theme"
            android:layout_marginEnd="@dimen/dimens_margin_left_book_details"
            android:layout_weight="1"
            android:text="@string/string_theme_gold"
            android:textSize="@dimen/dimens_txt_btn_theme" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/string_txt_btn_main"
        android:textSize="@dimen/dimens_txt_btn_main" />

</RelativeLayout>